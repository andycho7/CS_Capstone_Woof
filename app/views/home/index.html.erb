<div class = 'container'>
    <div class = "row">
        <div class = "col-sm-12" id = "sign-up-form" >
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <div class = 'row' id = 'sign-up-heading'>
                    <h1>Join our pet community today, it's free!</h1>
                </div>
                <div class = 'form-group row'>
                    <div class = 'col-sm-6'>
                        
                        <div class = 'form-group row sign-up-form-elements'>
                            <a class = 'social-color btn btn-block btn-lg btn-social btn-facebook'>
                                <span class = 'fa fa-facebook'></span> Sign in with Facebook
                            </a>
                        </div>
                            
                        <div class = 'form-group row sign-up-form-elements'>
                            <a class = 'btn btn-block btn-lg btn-social btn-google'>
                                <span class = 'fa fa-google-plus'></span> Sign in with Gmail
                            </a>
                        </div>      

                    </div>
                    <div class = 'col-sm-6' style = "border-left: 3px solid green;">
                        <div class = 'form-group row sign-up-form-elements'>
                            <% if !flash.empty? %>
                                <% if !flash['signUpError'].nil? and !flash['signUpError']['first_name'].nil? %>
                                    <p class = 'alert-danger'>&nbsp;First Name <%= flash['signUpError']['first_name'][0] %></p>
                                <% end %>
                            <% end %>
                            <%= f.text_field :first_name , :class => "form-control" , autofocus: true, :placeholder => "First Name" %>
                        </div>
                        <div class = 'form-group row sign-up-form-elements'>
                            
                            <% if !flash.empty? %>
                                <% if !flash['signUpError'].nil? and !flash['signUpError']['last_name'].nil? %>
                                    <p class = 'alert-danger' >&nbsp;Last Name <%= flash['signUpError']['last_name'][0] %></p>
                                <% end %>
                            <% end %>
                            <%= f.text_field :last_name, :class => "form-control", :placeholder => "Last Name" %>
                        </div>

                        <div class = 'form-group row sign-up-form-elements'>
                            <% if !flash.empty? %>
                                <% if !flash['signUpError'].nil? and !flash['signUpError']['email'].nil? %>
                                    <p class = 'alert-danger'>&nbsp;Email <%= flash['signUpError']['email'][0] %>
                                <% end %></p>
                            <% end %>
                            <%= f.email_field :email, :class => "form-control", :placeholder => "Email"%>
                        </div>
                        <div class = 'form-group row sign-up-form-elements'>
                            <% if !flash.empty? %>
                                <% if !flash['signUpError'].nil? and !flash['signUpError']['password'].nil? %>
                                    <p class = 'alert-danger'>&nbsp;Password <%= flash['signUpError']['password'][0] %>
                                <% end %></p>
                            <% end %>
                            <%= f.password_field :password, :class => "form-control", autocomplete:"off", :placeholder => "Password" %>
                        </div>
                        
                        <div class = 'form-group row sign-up-form-elements'>
                            <% if !flash.empty? %>
                                <% if !flash['signUpError'].nil? and !flash['signUpError']['password_confirmation'].nil? %>
                                    <p class = 'alert-danger'>&nbsp;Confirm Password: <%= flash['signUpError']['password_confirmation'][0] %></p>
                                <% end %>
                            <% end %>
                            <%= f.password_field :password_confirmation, :class => "form-control", :placeholder => "Confirm Password" %>
                        </div>

                        <div class = 'form-group row sign-up-form-elements'>
                            <%= f.submit "Join the Woof Community",  :class => 'btn btn-success btn-block' %>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>
