<div class = 'container'>
    <div class = "row">
        <div class = "col-sm-12" id = "sign-up-form" >
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <div class = 'row' id = 'sign-up-heading'>
                    <h1>Join our pet community today, it's free!</h1>
                </div>
                <div class = 'form-group row'>
                    <div class = 'col-sm-6'>
                        
                        <!--<div class = 'form-group row sign-up-form-elements'>
                            <a class = 'social-color btn btn-block btn-lg btn-social btn-facebook'>
                                <span class = 'fa fa-facebook'></span> Sign in with Facebook
                            </a>
                        </div>
                            
                        <div class = 'form-group row sign-up-form-elements'>
                            <a class = 'btn btn-block btn-lg btn-social btn-google'>
                                <span class = 'fa fa-google-plus'></span> Sign in with Gmail
                            </a>
                        </div> -->

                    </div>
                    <div class = 'col-sm-6' style = "border-left: 3px solid green;">
                      
                        <% if !flash['signUpError'].nil? and !flash['signUpError']['first_name'].nil? %>
                          <% first_name_error = true %>
                        <% end %>
                        <% first_name = (flash['signUpErrorUser'] ? flash['signUpErrorUser']['first_name'] : nil) %>
                        <div class = 'form-group row sign-up-form-elements <%= first_name_error ? "has-danger" : "" %>'>
                            <%= f.text_field :first_name , :class => "form-control form-control-danger" , autofocus: true, :placeholder => "First Name", value: first_name %>
                            <% if first_name_error %>
                              <div class='form-control-feedback'><%= flash['signUpError']['first_name'][0] %></div>
                            <% end %>
                        </div>
                        
                        <% if !flash['signUpError'].nil? and !flash['signUpError']['last_name'].nil? %>
                          <% last_name_error = true %>
                        <% end %>
                        <% last_name = (flash['signUpErrorUser'] ? flash['signUpErrorUser']['last_name'] : nil) %>
                        <div class = 'form-group row sign-up-form-elements <%= last_name_error ? "has-danger" : "" %>'>
                            <%= f.text_field :last_name, :class => "form-control form-control-danger", :placeholder => "Last Name", value: last_name %>
                            <% if last_name_error %>
                              <div class='form-control-feedback'><%= flash['signUpError']['last_name'][0] %></div>
                            <% end %>
                        </div>

                        <% if !flash['signUpError'].nil? and !flash['signUpError']['email'].nil? %>
                          <% email_error = true %>
                        <% end %>
                        <% email = (flash['signUpErrorUser'] ? flash['signUpErrorUser']['email'] : nil) %>
                        <div class = 'form-group row sign-up-form-elements <%= email_error ? "has-danger" : "" %>'>
                            <%= f.email_field :email, :class => "form-control form-control-danger", :placeholder => "Email", value: email %>
                            <% if email_error %>
                              <div class='form-control-feedback'><%= flash['signUpError']['email'][0] %></div>
                            <% end %>
                        </div>
                        
                        <% if !flash['signUpError'].nil? and !flash['signUpError']['password'].nil? %>
                          <% password_error = true %>
                        <% end %>
                        <div class = 'form-group row sign-up-form-elements <%= password_error ? "has-danger" : "" %>'>
                            <%= f.password_field :password, :class => "form-control form-control-danger", autocomplete:"off", :placeholder => "Password" %>
                            <% if password_error %>
                              <div class='form-control-feedback'>Password confirmation must be at least 6 characters long</div>
                            <% end %>
                        </div>
                        
                        <% if !flash['signUpError'].nil? and !flash['signUpError']['password_confirmation'].nil? %>
                          <% password_confirmation_error = true %>
                        <% end %>
                        <div class = 'form-group row sign-up-form-elements <%= password_confirmation_error ? "has-danger" : "" %>'>
                            <%= f.password_field :password_confirmation, :class => "form-control form-control-danger", :placeholder => "Confirm Password" %>
                            <% if password_confirmation_error %>
                              <div class='form-control-feedback'>Password confirmation must be at least 6 characters long</div>
                            <% end %>
                        </div>

                        <div class = 'form-group row sign-up-form-elements'>
                            <%= f.submit "Join the Woof Community",  :class => 'btn btn-success btn-block' %>
                        </div>
                    </div>
                </div>
            <% end %>
        </div>
    </div>
</div>
