<!-- Create the woof page here -->

<div class = 'container'>
    <div class = "row">
        <div class = "col-sm-6">
          <%= image_tag("logo.jpg", class: 'image-responsive', width: 300, height: 300) %>
        </div>
        <div class = "col-sm-6">
            <div class = "row">
                <%= link_to "Log In Now", new_user_session_path, class: "btn btn-lg btn-primary" %>
            </div>
            <h1>Sign Up</h1>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
                <div class = 'form-group row'>
                    <%= f.label :first_name %>
                    <%= f.text_field :first_name , :class => "form-control" , autofocus: true %>
                    <%= f.label :last_name %>
                    <%= f.text_field :last_name, :class => "form-control" %>
                </div>

                <div class = 'form-group row'>
                    <%= f.label :email %>
                    <%= f.email_field :email, :class => "form-control" %>
                </div>
                <div class = 'form-group row'>
                    <%= f.label :password %>
                    <%= f.password_field :password, :class => "form-control", autocomplete:"off" %>
                </div>
                
                <div class = 'form-group row'>
                    <%= f.label :confirm_password %>
                    <%= f.password_field :confirm_password, :class => "form-control" %>
                </div>

                <div class = 'form-group row'>
                    <%= f.submit "Sign Up",  :class => 'btn btn-primary' %>
                </div>
            <% end %>

















        </div>
    </div>
</div>