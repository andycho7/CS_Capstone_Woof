<p id="notice"><%= notice %></p>

<h1>Groups</h1>
<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>Name</th>
          <th>Owner</th>
          <th>Members</th>
          <th>Pets</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @groups.each do |group| %>
        <tr>
          <td><%= group.id %></td>
          <td><%= group.name %></td>
          <td><%= link_to "#{group.owner.first_name} #{group.owner.last_name}", group.owner %></td>
          <td>
          <% group.users.each do |user| %>
            <%= link_to "#{user.first_name} #{user.last_name}", user %>
            </br>
          <% end %>
          </td>
          <td>
          <% group.pets.each do |pet| %>
            <%= link_to pet.name, pet %>
            </br>
          <% end %>
          </td>
          <td><%= link_to 'Show', group, class: "btn btn-outline-info" %></td>
          <td><%= link_to 'Edit', edit_group_path(group), class: "btn btn-outline-info" %></td>
          <td><%= link_to 'Destroy', group, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-2"></div>
</div>
<br>

<%= link_to 'New Group', new_group_path, class: "btn btn-primary" %>
