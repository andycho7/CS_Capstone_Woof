<div class='container' id='user_profile_view'>
  <div class='row'>
    <div class='col'>
        <%= link_to 'Change Password', update_password_path, :class => 'btn btn-outline-primary float-right' %>
    </div>
  </div>
  <div class='row'>
    <div class='col-lg-6'><!-- left side -->

      <div class='row'>
        <div class='col-lg-6'>
          <p class="text-muted"><strong>Email</strong></p>
        </div>
        <div class='col-lg-6'>
          <%= @user.email %>
        </div>
      </div>

      <div class='row'>
        <div class='col-lg-6'>
          <p class="text-muted"><strong>First Name</strong></p>
        </div>
        <div class='col-lg-6'>
          <%= @user.first_name %>
        </div>
      </div>

      <div class='row'>
        <div class='col-lg-6'>
          <p class="text-muted"><strong>Last Name</strong></p>
        </div>
        <div class='col-lg-6'>
          <%= @user.last_name %>
        </div>
      </div>  
    </div><!-- end left side -->
    
    
    <div class='col-lg-6'><!-- right side -->
      
      <div class='row'>
        <div class='col-lg-6'>
          <% unless @user.image.thumb.url.nil? %>
            <%= image_tag @user.image.thumb.url, class: "rounded-circle", width: 50, height: 50 %>
          <% else %>
            <%= image_tag 'user_placeholder', class: "rounded-circle", width: 50, height: 50 %>
          <% end %>
        </div>
        <div class='col-lg-6'>
          <% unless @user.image.thumb.url.nil? %>
            <%= @user.image.file.identifier %>
          <% end %>
        </div>
      </div>
      
      <div class='row'>
        <div class='col-lg-6'>
          <p class="text-muted"><strong>Private Profile</strong></p>
        </div>
        <div class='col-lg-6'>
          <% if @user.private %>
            <%= fa_icon 'check 2x' %>
          <% else %>
            <%= fa_icon 'times 2x' %>
          <% end %>
        </div>
      </div>
      
      <div class='row'>
        <div class='col-lg-6'>
          <p class="text-muted"><strong>Badges here?</strong></p>
        </div>
        <div class='col-lg-6'>
          badges
        </div>
      </div>
    </div><!-- end right side -->
  </div>
  <div class='row'>
    <div class='col'>
        <%= link_to 'Edit Profile', profile_edit_path, :class => 'btn btn-primary float-right' %>
    </div>
  </div>
</div>
