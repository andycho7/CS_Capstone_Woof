<p id="notice"><%= notice %></p>

<h1>Users</h1>
<div class="row">
  <div class="col-md-2"></div>
  <div class="col-md-8">
    <table class="table table-hover">
      <thead>
        <tr>
          <th>#</th>
          <th>First name</th>
          <th>Last name</th>
          <th>Email</th>
          <th>Belongs to Groups</th>
          <th>Owns Groups</th>
          <th colspan="4"></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
        <tr>
          <td><%= user.id %></td>
          <td><%= user.first_name %></td>
          <td><%= user.last_name %></td>
          <td><%= user.email %></td>
          <td>
          <% user.groups.each do |group| %>
            <%= link_to group.name, group %>
            </br>
          <% end %>
          </td>
          <td>
          <% user.owns_groups.each do |group| %>
            <%= link_to group.name, group %>
            </br>
          <% end %>
          </td>
          <td><%= link_to 'Around Me', around_me_path(user.id), class: "btn btn-outline-success btn-sm" %></td>
          <td><%= link_to 'Show', user, class: "btn btn-outline-info btn-sm" %></td>
          <td><%= link_to 'Edit', edit_user_path(user), class: "btn btn-outline-info btn-sm" %></td>
          <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-2"></div>
</div>
<br>

<%= link_to 'New User', new_user_path, class: "btn btn-primary" %>
