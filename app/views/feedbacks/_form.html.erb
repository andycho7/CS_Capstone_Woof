<div class="card" style="width: 90%; margin: 30px auto;">
  <div class="card-block">
    <p><em>Your feedback will remain anonymous</em></p>
    <%= form_for feedback, remote: true do |f| %>
      <% if feedback.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(feedback.errors.count, "error") %> prohibited this feedback from being saved:</h2>

          <ul>
            <% feedback.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>

      <div class="form-feedback">
        <%= f.text_area :message, class: "form-control", style: 'height: 150px;' %>
      </div>

      <div class="form-actions">
        <%= f.submit 'Send Feedback', class: "btn btn-primary", style: 'margin-top: 10px;' %>
      </div>
    <% end %>
  </div>
</div>
